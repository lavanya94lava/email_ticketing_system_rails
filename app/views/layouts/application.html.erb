<!DOCTYPE html>
<html>
  <head>
    <title>EmailTicketingSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css'%>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if current_user && current_user.admin %>
    <p class="alert alert-success">"Welcome! Admin"</p>
  <% elsif current_user %>
    <p class="alert alert-success">"Welcome! Employee"</p>
  <%else %>
    <p class="alert alert-danger">"Please SignIn first"</p>
  <% end %>

  <p class="navbar-text float-right">
    <% if current_user %>
      Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
    <%else%>
      <%= link_to "Signup","/signup", :class => 'navbar-link'%>
      |<%= link_to 'Login', '/login', :class => 'navbar-link' %>
    <% end %>
  </p>
    <%= yield %>
  </body>
</html>
