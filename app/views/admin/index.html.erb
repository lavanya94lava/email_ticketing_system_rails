
<% if current_user && current_user.admin%>
    <h2>
        Here is a list of all emails you have received
    </h2>

    <table class = "table table-bordered mt-5" >
            <tr>
                <th>Sender</th>
                <th>Date</th>
                <th>Subject</th>
                <th>Body</th>
             
            </tr>
    <% @emails.each do |email|%>
        
        <tr>
            <td><%= email[:sender]%></td>
            <td><%= email[:date]%></td>
            <td><%= email[:subject]%></td>
            <td><%= email[:body]%></td>
         
        </tr>
    <%end%>
<%else%>
    <h1>please login first</h2>
    
<% end %>