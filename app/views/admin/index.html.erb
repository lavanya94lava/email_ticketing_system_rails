<h2>
    Here is a list of all emails you have received
</h2>

<table class = "table table-bordered mt-5" >
        <tr>
            <th>Sender</th>
            <th>Date</th>
            <th>Subject</th>
            <th>Body</th>
            <th > Show Mail </th>
            <th> Destroy Mail </th>
        </tr>
<% @emails.each do |email|%>
    
    <tr>
        <td><%= email.sender%></td>
        <td><%= email.date%></td>
        <td><%= email.subject%></td>
        <td><%= email.body%></td>
        <td><%= link_to 'Show ', email_path(email)%></td>
        <td><%= link_to 'Destroy ',email, method: :delete%></td>
        <td><%= link_to 'Send ',email, method: :delete%></td>
    </tr>
<%end%>