<% if current_user%>
  <h1>Already logged in here, so you are not authorized </h1>
<%else%>
  <h1 class = "col-md-4">Signup!</h1>

  <%= form_for :user, url: '/users' do |form| %>

      <div class="form-group">
        <%= form.label :name, class: "col-md-4 control-label" %>
        <div class = "col-md-4">
          <%= form.text_field :name, required: true, class: "form-control"%>
        </div>
      </div>
    
      <div class="form-group">
        <%= form.label :email, class: "col-md-4 control-label" %>
        <div class = "col-md-4">
          <%= form.text_field :email, required: true, class: "form-control" %>
        </div>
      </div>
    
      <div class="form-group">
        <%= form.label :password,class: "col-md-4 control-label" %>
        <div class = "col-md-4">
          <%= form.password_field :password , required: true, class: "form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :password_confirmation, class: "col-md-4 control-label" %>
        <div class = "col-md-4">
          <%= form.password_field :password_confirmation , required: true, class: "form-control"%>
        </div>
      </div>

      <div class = "col-md-4">
        <%= form.submit:Submit, class: 'btn btn-success' %>
      </div>
<% end %>

<% end %>



